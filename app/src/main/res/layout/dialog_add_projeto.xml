<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/DialogStyle"
    android:padding="10dp"
    android:orientation="vertical">

    <EditText
        android:hint="Nome da Etapa"
        android:id="@+id/edit_add_etapa"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:capitalize="sentences"
        android:singleLine="true" />

    <android.support.v7.widget.SwitchCompat
        android:text="Compartilhar com o cliente"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_cancel_etapa"
            android:textColor="@color/colorProjetos"
            android:background="@android:color/transparent"
            app:theme="@android:style/Widget.Holo.Light.Button"
            android:text="Cancelar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

        <Button
            android:id="@+id/bt_add_etapa"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorProjetos"
            android:background="@android:color/transparent"
            android:text="Adicionar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>
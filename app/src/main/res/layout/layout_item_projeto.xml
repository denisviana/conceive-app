<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_projeto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    card_view:cardElevation="4dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:textColor="@color/colorProjetos"
            android:id="@+id/nome_projeto"
            android:text="Varanda"
            android:textSize="23sp"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/nome_cliente_projeto"
            android:layout_below="@id/nome_projeto"
            android:text="Denis Viana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/data_inicio_projeto"
            android:layout_below="@id/nome_cliente_projeto"
            android:text="01 de dez"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/etapa_atual_projeto"
            android:layout_below="@id/data_inicio_projeto"
            android:text="01 de dez"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:clickable="true"
            android:src="@drawable/ic_edit_gray"
            android:layout_alignParentRight="true"
            android:id="@+id/ic_edit_projeto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
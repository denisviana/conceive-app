<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="95dp"
    android:minHeight="95dp">


    <LinearLayout
        android:paddingLeft="10dp"
        android:id="@+id/backgroud_item_projeto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:elevation="6dp">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            >

            <TextView
                android:textColor="#fff"
                android:id="@+id/text_item_nome_projeto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textColor="#fff"
                android:id="@+id/text_item_cliente_projeto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textColor="#fff"
                android:id="@+id/text_item_data_inicio_projeto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textColor="#fff"
                android:id="@+id/text_item_etapa_atual_projeto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <ImageButton
            android:id="@+id/bt_edit_projeto"
            android:layout_gravity=""
            android:background="@android:color/transparent"
            android:layout_width="24dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_edit_white"
            android:layout_weight="0.11" />

    </LinearLayout>


</LinearLayout>
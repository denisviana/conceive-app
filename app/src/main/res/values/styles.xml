<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:alertDialogStyle">@style/DialogStyle</item>

    </style>

    <style name="ProjetosTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorProjetos</item>
        <item name="colorPrimaryDark">@color/colorProjetosDark</item>
        <item name="colorControlNormal">@color/colorProjetos</item>
        <item name="colorAccent">@color/colorProjetos</item>
        // Cor padr√£o da linha

    </style>

    <style name="noactionbar" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/colorProjetos</item>
        <item name="colorPrimaryDark">@color/colorProjetosDark</item>
        <item name="colorAccent">@color/colorProjetos</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:alertDialogStyle">@style/DialogStyle</item>
    </style>

    <style name="NoactionbarLogin" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/background_light</item>

    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="colorPrimary">@color/colorProjetos</item>
        <item name="android:textColor">#000</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="colorAccent">@color/colorProjetos</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PortifolioTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPortfolio</item>
        <item name="colorPrimaryDark">@color/colorPotfolioDark</item>
    </style>

    <style name="AcervoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAcervo</item>
        <item name="colorPrimaryDark">@color/colorAcervoDark</item>
    </style>

    <style name="ConfigTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorConfig</item>
        <item name="colorPrimaryDark">@color/colorConfiDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
